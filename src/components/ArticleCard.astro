---
import { formatDate } from '@/utils/formatDate';
import { IoArrowForward } from 'react-icons/io5';
import type { ArticleInterface } from '@/@types/types';
import ImageWithPlaceholder from '@/atoms/ImageWithPlaceholder.astro';

const ArrowIcon = IoArrowForward;
const { title, slug, date, summary, coverPictureUrl, coverPictureAlt } =
  Astro.props as ArticleInterface;
---

<article
  class="card bg-shark-900 text-shark-50 rounded-xl shadow-lg shadow-black/40 overflow-hidden hover:scale-105 transition-transform duration-200"
>
  <ImageWithPlaceholder
    src={coverPictureUrl}
    alt={coverPictureAlt}
    width={1500}
    height={1000}
    class="w-full h-52 object-cover rounded-t-xl"
  />

  <div class="p-4 md:p-6 space-y-2">
    <h3 class="text-lg md:text-xl font-semibold line-clamp-2">{title}</h3>
    <p class="text-sm text-shark-300">Publi√© le {formatDate(date)}</p>
    <p class="text-sm text-shark-200 line-clamp-3">{summary}</p>
  </div>

  <div class="flex justify-end p-4 md:p-6">
    <a
      href={`/reportages/articles/${slug}`}
      class="cta-button bg-red-orange-500 hover:bg-red-orange-600 text-shark-50"
    >
      <span>Lire la suite</span>
      <IoArrowForward />
    </a>
  </div>
</article>
