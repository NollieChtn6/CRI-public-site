---
import Layout from '@/layouts/Layout.astro';
import type { GalleryInterface } from '@/@types/types';
import galleries from '@/data/galleries.json';
import GalleryCard from '@/components/galleries/GalleryCard.astro';

const galleryList: GalleryInterface[] = galleries;
---

<Layout>
  <section class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-16 space-y-12">
    <header class="text-center space-y-4">
      <h1 class="text-4xl sm:text-5xl font-bold text-red-500">
        Galeries photo
      </h1>

      <p class="text-lg sm:text-xl text-shark-200 max-w-3xl mx-auto">
        Découvrez nos reportages photo réalisés sur le terrain, mettant en
        lumière les missions, les exercices et les interventions des acteurs de
        la Sécurité Civile et de la Défense.
      </p>
    </header>

    {
      galleryList.length === 0 ? (
        <p class="text-shark-300 text-center">
          Aucune galerie disponible pour le moment.
        </p>
      ) : (
        <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {galleryList.map((gallery) => (
            <GalleryCard gallery={gallery} />
          ))}
        </section>
      )
    }
  </section>
</Layout>
