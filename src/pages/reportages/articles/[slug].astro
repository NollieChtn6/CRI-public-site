---
import Layout from '@/layouts/Layout.astro';
import { formatDate } from '@/utils/formatDate';
import type { ArticleInterface } from '@/@types/types';
import articles from '@/data/articles.json';

// docs.astro.build/en/guides/on-demand-rendering/
export const prerender = true;

export async function getStaticPaths() {
  return articles.map((article: ArticleInterface) => ({
    params: { slug: article.slug },
    props: { article }
  }));
}

const { article } = Astro.props as { article: ArticleInterface };
if (!article) {
  return Astro.redirect('/404');
}
---

<Layout>
  <article class="max-w-5xl mx-auto px-4 py-12">
    <header class="mb-10 space-y-4">
      <h1 class="text-4xl font-bold mb-4">
        {article.title}
      </h1>
      <p>{article.summary}</p>

      <p class="text-sm text-gray-500">
        Publié le {formatDate(article.date)} • Par {article.author}
      </p>
    </header>

    {
      article.pictures?.length > 0 && (
        <section class="mb-12">
          <div class="grid grid-cols-2 md:grid-cols-4 auto-rows-[160px] gap-4">
            {article.pictures.map((picture, index) => (
              <div
                class:list={[
                  'overflow-hidden rounded-lg',
                  index % 5 === 0 && 'col-span-2 row-span-2',
                  index % 7 === 0 && 'row-span-2'
                ]}
              >
                <img
                  src={picture.url}
                  alt={picture.alt}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>
            ))}
          </div>
        </section>
      )
    }
    <section class="prose prose-lg max-w-none">
      <p>{article.content}</p>
    </section>
  </article>
</Layout>
